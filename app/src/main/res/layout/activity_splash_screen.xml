<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".SplashScreenActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginStart="70dp"
        app:lottie_loop="true"
        android:layout_marginTop="150dp"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/notes_animation"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/notes_app"
        app:fontFamily="@font/poppins_semi_bold"
        android:textSize="25sp"
        android:layout_below="@+id/lottieView"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/versionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/version"
        android:textSize="12sp"
        app:fontFamily="@font/poppins_regular"
        android:textColor="#C6C6C6"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/developedByText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/developed_by"
        android:textSize="14sp"
        app:fontFamily="@font/poppins_regular"
        android:textColor="#C6C6C6"
        android:layout_above="@id/versionText"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>